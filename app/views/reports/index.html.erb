<p id="notice"><%= notice %></p>

<h1><%= t ".title" %></h1>

<table>
  <thead>
    <tr>
      <th><%= Report.human_attribute_name("title") %></th>
      <th><%= Report.human_attribute_name("user") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.title %></td>
        <td><%= report.user.name %></td>
        <td><%= link_to t("views.show"), report %></td>
        <td><%= link_to t("views.edit"), edit_report_path(report) %></td>
        <td><%= link_to t(".destroy"), report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("views.new"), new_report_path %>
