<h1><%= t ".title" %></h1>
<p><%= User.human_attribute_name("name") %>：<%= @user.name %></p>
<p><%= User.human_attribute_name("email") %>：<%= @user.email %></p>
<p><%= User.human_attribute_name("postal_code") %>：<%= @user.postal_code %></p>
<p><%= User.human_attribute_name("address") %>：<%= @user.address %></p>
<p><%= User.human_attribute_name("introduction") %>：<%= @user.introduction %></p>
<p><%= image_tag @user.avatar.variant(resize_to_limit: [300, 300]) %></p>

<% if current_user != @user %>
  <% if current_user.active_relationships.exists?(target_user_id: @user.id) %>
    <%= link_to t("views.user_unfollow"), user_follow_path(@user), method: :delete %>
  <% else %>
    <%= link_to t("views.user_follow"), user_follow_path(@user), method: :post %>
  <% end %>
<% end %>
<br>

<%= render "layouts/links_after_login" %>

